  <!--sub addon gødning pit - formål er at øge gødning output -->
  <addon id="add.barn_manurepit.l1" family="farm" group="barn" type="addons" lvl="1" stage="1">
  <stats>footprint=-1</stats>
    <cost>
      <res id="res.money" amount="55"/>
      <res id="res.wood" amount="25"/>
      <res id="res.stone" amount="12"/>
    </cost>
    <buff applies_to="all">
      <res id="res.fertilizer" amount="5" type="mult" mode="yield"/>
    </buff>
    <require>rsd.fertilizer.l1</require>
  </addon>

  <!--sub addon strøelse - formål er at øge gødning output, og på sigt øge dyre velvære -->
