<addons source="World 2025.xlsx" sheet="Addon">

<!-- addons for farm -->

  <addon id="add.barn.l1" family="farm" type="addons" lvl="1" stage="1">
    <stats>footprint=-5;animal_cap=25</stats>
    <cost>
      <res id="res.money" amount="100"/>
      <res id="res.wood" amount="25"/>
      <res id="res.stone" amount="5"/>
    </cost>
    <upgradesTo>
      <target id="add.barn.l2"/>
    </upgradesTo>
  </addon>

    <addon id="add.barn.l2" family="farm" type="addons" lvl="1" stage="1">
    <stats>animal_cap=50</stats>
    <cost>
      <res id="res.money" amount="350"/>
      <res id="res.wood" amount="125"/>
      <res id="res.stone" amount="50"/>
    </cost>
    <require>rsd.animalhusbandry.l2</require>
  </addon>

