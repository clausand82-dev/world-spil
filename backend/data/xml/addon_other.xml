  <!--addon fiske mole - åbner op for fiskeri -->
      <addon id="add.mole.l1" family="lake" type="addons" lvl="1" stage="1">
      <stats>footprint=-1</stats>
    <cost>
      <res id="res.money" amount="100"/>
      <res id="res.wood" amount="100"/>
    </cost>
    <require>rsd.fishing.l1</require>
    <yield period="1h">
      <res id="res.rawcommonfish" amount="2"/>
