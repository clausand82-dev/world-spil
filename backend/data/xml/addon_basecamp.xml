  <stats>footprint=-1,waterCapacity=15</stats>
    <cost>
      <res id="res.money" amount="20"/>
      <res id="res.wood" amount="2"/>
      <res id="res.stone" amount="35"/>
    </cost>
    <yield period="1h">
      <res id="res.water" amount="2"/>
      <res id="res.salt" amount="1"/>
    </yield>
    <require>bld.basecamp.l1</require>
  </addon>

    <addon id="add.well.l2" family="basecamp" type="addons" lvl="2" stage="2">
  <stats>footprint=-1,waterCapacity=25</stats>
    <cost>
      <res id="res.money" amount="20"/>
      <res id="res.wood" amount="2"/>
      <res id="res.stone" amount="35"/>
    </cost>
    <yield period="1h">
      <res id="res.water" amount="4"/>
      <res id="res.salt" amount="1"/>
    </yield>
    <require>rsd.iron.l1</require>
  </addon>

  <addon id="add.well_bucket.l1" family="basecamp" group="well" type="addons" lvl="1" stage="2">
  <stats>footprint=-1,waterCapacity=10</stats>
    <cost>
      <res id="res.money" amount="10"/>
      <res id="res.wood" amount="10"/>
      <res id="res.iron" amount="1"/>
    </cost>
    <yield period="1h">
      <res id="res.water" amount="1"/>
    </yield>
    <require>rsd.iron.l1, addon.well.l2</require>
  </addon>

  <addon id="add.tailorspot.l1" family="basecamp" type="addons" lvl="1" stage="1">
