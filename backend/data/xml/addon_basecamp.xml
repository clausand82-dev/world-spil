  <addon id="add.bigfireplace.l1" family="basecamp" type="addons" lvl="1" stage="1">
    <stats>footprint=-1;provision_cap=25;heatFossilCapacity=25;wasteOtherCapacity=50</stats>
    <cost>
      <res id="res.money" amount="150"/>
    </cost>
    <require>bld.basecamp.l2</require>
    <yield period="1h">
      <res id="res.money" amount="5"/>
      </yield>
  </addon>

  <addon id="add.saltbowl.l1" family="basecamp" type="addons" lvl="1" stage="1">
     <cost>
      <res id="res.money" amount="25"/>
    </cost>
    <yield period="1h">
      <res  id="res.salt" amount="1"/>
    </yield>
    <require>bld.basecamp.l1</require>
  </addon>

