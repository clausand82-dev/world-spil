{
  "family": "health",
  "fields": {
    "health_free_dentist_kids": {
      "label": "Gratis tandlæge — børn",
      "help": "Ordningen gælder pt for ${summary.citizens.groupCounts.kids + summary.citizens.groupCounts.baby} børn.",
      "control": { "type": "toggle", "default": false },
      "stageMin": 2,
      "stageMax": 1000,
      "requires": {
        "research": ["rsd.tools.l2","rsd.irrigation.l1"],
        "buildings": ["bld.basecamp.l3"]

      },
      "showWhenLocked": false,
      "effects": [
        { "stat": "healthDentistCapacity", "op": "add", "value": 100 },
        { "stat": "taxHealthUsage", "op": "add", "value": { "expr": "(summary.citizens.groupCounts.kids + summary.citizens.groupCounts.baby) * 100" } }
      ]
    },
    "health_free_dentist_young": {
      "label": "Gratis tandlæge — unge",
      "help": "Ordningen gælder pt for ${summary.citizens.groupCounts.young} unge.",
      "stageMin": 2,
      "stageMax": 99,
      "control": { "type": "toggle", "default": false },
      "effects": [
        { "stat": "healthDentistCapacity", "op": "add", "value": 80 },
        { "stat": "taxHealthUsage", "op": "add", "value": { "expr": "summary.citizens.groupCounts.young * 125" } }
      ]
    },
    "health_free_dentist_adults": {
      "label": "Gratis tandlæge — voksne",
      "help": "Ordningen gælder pt for ${(summary.citizens.groupCounts.adultsTotal + summary.citizens.groupCounts.old)} voksne.",
      "control": { "type": "toggle", "default": false },
      "stageMin": 2,
      "stageMax": 99,
      "effects": [
        { "stat": "healthDentistCapacity", "op": "add", "value": 50 },
        { "stat": "taxHealthUsage", "op": "add", "value": { "expr": "(summary.citizens.groupCounts.adultsTotal + summary.citizens.groupCounts.old) * 175" } }
      ]
    },
    "health_subsidy_pct": {
      "label": "Tilskud til sundhed (procent)",
      "help": "Reducerer ventetid/øger adgang — koster budgettet.",
            "stageMin": 3,
      "stageMax": 99,
      "control": { "type": "percent", "default": 0 },
      "effects": [
        {
          "stat": "healthCapacity",
          "op": "mul",
          "value": { "expr": "1 + 0.5 * (choice('health_subsidy_pct')/100)" },
          "as": "multiplier"
        },
        {
          "stat": "taxHealthUsage",
          "op": "add",
          "value": { "expr": "summary.citizens.totals.totalPersons * (choice('health_subsidy_pct') * 0.01)" }
        }
      ]
    },
    "health_wait_target_days": {
      "label": "Ventetidsmål (dage)",
      "help": "Lavere mål kræver flere ressourcer.",
      "control": { "type": "slider", "default": 60, "min": 10, "max": 180, "step": 5 },
            "stageMin": 3,
      "stageMax": 99,
      "effects": [
    {
      "stat": "healthCapacity",
      "op": "div",
      "value": { "expr": "(choice('health_wait_target_days') / 100)" }
     },
     {
      "stat": "taxHealthUsage",
      "op": "add",
      "value": { "expr": "(60 / choice('health_wait_target_days')) * 10 * summary.citizens.totals.totalPersons" }
    }
  ]
    },
    "health_mode": {
      "label": "Sundheds‑strategi",
            "stageMin": 3,
      "stageMax": 99,
      "control": {
        "type": "radio",
        "default": "balanced",
        "options": [
          { "value": "balanced", "label": "Balanceret" },
          { "value": "prevention", "label": "Forebyggelse" },
          { "value": "acute",      "label": "Akut" }
        ]
      },

      "effects": []
    },
    "health_campaign_prevention": {
      "label": "Kampagne: Forebyggelse",
            "stageMin": 3,
      "stageMax": 99,
      "control": { "type": "toggle", "default": false },
      "effects": [
        { "stat": "demand", "op": "sub", "value": 0.05 }        
      ]
    }
  }
}